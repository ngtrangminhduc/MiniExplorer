<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ducnguyen.miniexplorer">
    <supports-screens
        android:largeScreens="true"
        android:normalScreens="true"
        android:xlargeScreens="true"
        android:smallScreens="true"
        ></supports-screens>
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LoginActivity" />
        <activity
            android:name=".NewScreen"
            android:parentActivityName=".LoginActivity" />
        <activity android:name=".RegistrationScreen" />
        <activity android:name=".MainMenu" />
        <activity android:name=".ReadingScreen" />
        <activity android:name=".ExplorerScreen" />
        <activity android:name=".AboutUsScreen" />
        <activity android:name=".SettingScreen" />
    </application>

</manifest>